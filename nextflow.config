process.container = 'quay.io/nextflow/bash'

profiles {

  standard {
    process {
      cpus = 1
    }
  }

  cpus {
    process {
      cpus = 2
    }
  }

  memory {
    process {
      memory = '10MB'
    }
  }

  "cpus and memory" {
    process {
      cpus = 2
      memory = '10MB'
    }
  }

  morecpus {
    process {
      cpus = 3
    }
  }

  with_params {
    params.hello = "$baseDir/profile.hello"
  }

}
